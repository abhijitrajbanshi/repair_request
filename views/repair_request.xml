<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[contains(@class, 'o_portal_my_home')]" position="inside">

            <div t-call="portal.portal_docs_entry" class="pt-5">
                <t t-set="icon" t-value="'/repair_request/static/tools.png'"/>
                <t t-set="title">Repair Requests</t>
                <t t-set="text">View your repair requests</t>
                <t t-set="url">/my/repair_requests</t>
                <t t-set="config_card">True</t>
            </div>
        </xpath>
    </template>

    <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'repair_lists' " class="breadcrumb-item">
                <span>Repair Requests</span>
            </li>
            <li t-if="page_name == 'create_request' " class="breadcrumb-item">
                <a href="/my/repair_requests">Repair Requests</a> / <span>Create Request</span>
            </li>
            <li t-if="page_name == 'view_details' " class="breadcrumb-item">
                <a href="/my/repair_requests">Repair Requests</a> / <span>View Details</span>
            </li>
        </xpath>
    </template>

    <template id="repair_lists" name="Repair Lists">
        <t t-call="portal.portal_layout">
            <t t-set="my_details" t-value="False"/>
            <div class="wrapper col-12 d-flex flex-wrap justify-content-between align-items-center">
                <h3 class="my-3">Repair Request Lists</h3>
                <a href="/my/create-request" class="btn btn-primary py-2 d-flex align-items-center gap-2 ms-auto">
                    New
                </a>
            </div>
            <div class="row justify-content-between">
                <div t-attf-class="o_portal_content col-12 col-lg-8 mb-5">
                    <div class="o_portal_my_home">
                        <div class="oe_structure" id="oe_structure_portal_my_home_1"/>
                        <div class="o_portal_docs row g-2">
                            <div class="o_portal_doc_spinner spinner-border text-o-color-2 align-self-center mt-5"/>
                            <p class="o_portal_no_doc_message d-none">No Documents to display</p>
                            <div class="o_portal_category row g-2 mt-3" id="portal_common_category">

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <t t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Name</th>
                        <th>Order Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="repair_requests" t-as="repair">
                        <tr>
                            <td>
                                <t t-esc="repair.repair_request_name" />
                            </td>

                            <td>
                                <t t-esc="repair.create_date.strftime('%Y-%m-%d')"/>
                            </td>

                            <td>
                                <t t-esc="repair.status" />
                            </td>

                            <td>
                                <a t-attf-href="/my/repair_requests/{{ repair.id }}" class="btn btn-primary">View Details</a>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <template id="create_repair_request" name="Create Repair Request">
        <t t-call="portal.portal_layout">
            <div class="container mt-4">
                <h3 class="mb-4">Create Repair Request</h3>
                <form action="/my/create-request/submit" method="post" enctype="multipart/form-data" class="bg-white p-4 rounded shadow-sm">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="form-group mb-3">
                        <label for="repair_request_name" class="form-label">Request Name</label>
                        <input type="text" id="repair_request_name" name="repair_request_name" class="form-control" placeholder="Enter request name" required="required"/>
                    </div>

                    <div class="form-group mb-3">
                        <label for="repair_request_description" class="form-label">Description</label>
                        <textarea id="repair_request_description" name="repair_request_description" class="form-control" rows="4" placeholder="Provide a detailed description"></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label for="repair_image" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" id="repair_image" name="repair_image" multiple="true" />
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary px-4 py-2">Submit</button>
                    </div>
                </form>
            </div>
        </t>
    </template>

    <template id="repair_request_template" name="Repair Request Detail">
        <t t-call="portal.portal_layout">
            <div class="container my-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Repair Request: <t t-esc="repair_request.repair_request_name"/></h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <p><strong>Status:</strong> <span class="badge badge-primary"><t t-esc="repair_request.status"/></span></p>
                            <p><strong>Description:</strong></p>
                            <p><t t-esc="repair_request.description"/></p>
                        </div>
                        <div class="col-12 col-md-6">
                            <t t-if="repair_request.repair_image">
                                <p><strong>Image Attachments:</strong></p>
                                <img t-att-src="'data:image/png;base64,' + repair_request.repair_image.decode('utf-8')" class="img-fluid border rounded mt-2"/>
                            </t>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <a href="/my/repair_requests" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
        </t>
    </template>
</odoo>
